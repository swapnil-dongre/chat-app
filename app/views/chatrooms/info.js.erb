$("#chatroom-messages").html("<%= j render partial: 'setting_info'%>");
$(".chatroom_profile").on("click", function(){
  $(".choose_image").click();
});

$('.choose_image').on('change', function(e){
  debugger
  chatroom = $(this).attr('chatroom_id');
  var file = e.target.files[0];
  var filename = file.name;
  var data = new FormData();
  data.append("logo_image", file);
  $.ajax({
    url: "/chatrooms/" + chatroom + "/change_image",
    type: "POST",
    data: data,
    cache: false,
    contentType: false,
    processData: false
  });
});

